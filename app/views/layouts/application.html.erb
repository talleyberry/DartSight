  <body>
    <div class="container">
      <header>
        <%= image_tag("logo_dartsight.png", :alt => "DartSight Logo", :class => "logo") %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", '#' %></li>
            <li><%= link_to "Device", '#' %></li>
            <li><%= link_to "Method", '#' %></li>
            <li><%= link_to "Buy", '#' %></li>
          </ul>
        </nav>
      </header>
      <section class="round">
        <%= yield %>
      </section>
    </div>
  </body>
